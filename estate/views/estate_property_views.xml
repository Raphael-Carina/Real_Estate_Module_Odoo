<?xml version="1.0"?>

<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property Action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Les vues liste affichent les enregistrements sous forme 'tabulaire' (sous forme de ligne) 
    Leur root element est <list> -->
    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_available_from"/>
            </tree>
        </field>
    </record>


</odoo>
