<?xml version="1.0"?>

<odoo>
    <!-- Menu root -->
    <menuitem id="estate_menu_root" name="Real Estate"/>

    <!-- Menu Advertisements -->
    <menuitem id="estate_property_first_level_menu" name="Advertisements" parent="estate_menu_root"/>

    <!-- Sous-menu advertisements = action pour ouvrir la liste des enregistrements du modèle estate.property et en créer de nouveaux -->
    <menuitem id="model_estate_property_menu_action" action="estate_property_action" parent="estate_property_first_level_menu"/>

    <!-- Menu Settings -->
    <menuitem id="estate_settings_level_menu" name="Settings" parent="estate_menu_root"/>

    <!-- Sous-menu settings (Property Type) = action pour ouvrir la liste des enregistrements du modèle estate.property.type et en créer de nouveaux -->
    <menuitem id="model_estate_property_type_menu_action" action="estate_property_type_action" parent="estate_settings_level_menu"/>

    <!-- Sous-menu settings (Property Tags) = action pour ouvrir la liste des enregistrements du modèle estate.property.tags et en créer de nouveaux -->
    <menuitem id="model_estate_property_tags_menu_action" action="estate_property_tags_action" parent="estate_settings_level_menu"/>
</odoo>